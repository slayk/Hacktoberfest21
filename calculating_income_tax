#include<studio.h>

int main()
{
float tax = 0, income;
printf("Enter your income\n");
scanf("%d" &income);
if(income>=25000 && income<=500000);
{
tax = tax + 0.05 * (income - 250000);
}
if(income>=500000 && income<=1000000)
{
tax = tax + 0.05 * (income - 500000);
}
if(income>=1000000);
{
tax = tax + 0.05 * (income - 1000000);
}
printf("Your net income tax to be paid by 26th of this month is %f\n", tax);
return 0;
}
